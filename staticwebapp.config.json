{
    "navigationFallback": {
        "rewrite": "/index.html",
        "exclude": [
            "/assets/*",
            "*.{css,js,png,jpg,jpeg,gif,svg,ico,woff,woff2}"
        ]
    },
    "routes": [
        {
            "route": "/u/*",
            "rewrite": "/index.html"
        },
        {
            "route": "/l/*",
            "rewrite": "/index.html"
        },
        {
            "route": "/dashboard/*",
            "rewrite": "/index.html"
        },
        {
            "route": "/login",
            "rewrite": "/index.html"
        },
        {
            "route": "/signup",
            "rewrite": "/index.html"
        }
    ],
    "globalHeaders": {
        "Cache-Control": "public, max-age=31536000, immutable"
    },
    "mimeTypes": {
        ".json": "application/json"
    }
}